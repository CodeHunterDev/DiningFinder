<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarTitle</item>
    </style>

    <style name="Widget.Dining" parent="@android:style/Widget.Material" />

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.Light" />

    <style name="TextAppearance.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="AlertDialog.ButtonBar" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
    </style>

    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="WidgetMap">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.H3</item>
        <!-- Use dp because we need the title and subtitle to always fit in the sheet peak area. -->
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>
    <style name="TextAppearance.H3" parent="@style/TextAppearance.H1">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="TextAppearance.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontFamily">@font/google_sans</item>
    </style>

    <style name="Widget.Map.MarkerSubtitle" parent="WidgetMap">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <!-- Use dp because we need the title and subtitle to always fit in the sheet peak area. -->
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <!-- Map -->
    <style name="TextAppearance.Map.MarkerLabel" parent="TextAppearance.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="Widget.Dining.Title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.H1</item>
    </style>

    <style name="Widget.Dining.MultilineBody">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>